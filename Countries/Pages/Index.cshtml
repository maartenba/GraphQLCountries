@page
@model IndexModel
@{
    ViewData["Title"] = "Countries";
}

<h1>Countries</h1>
<table>
    <thead>
    <tr>
        <th scope="col">Country code</th>
        <th scope="col">Name</th>
        <th scope="col">Emoji</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var country in Model.Countries)
    {
        <tr>
            <td>@country.Code</td>
            <td><a asp-page="Country" asp-route-countryCode="@country.Code">@country.Name</a></td>
            <td>@country.Emoji</td>
        </tr>
    }
    </tbody>
</table>